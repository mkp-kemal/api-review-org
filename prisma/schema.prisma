enum Season {
  SPRING
  SUMMER
  FALL
}

enum FlagStatus {
  OPEN
  INVESTIGATING
  RESOLVED
  REJECTED
}

enum SubscriptionPlan {
  BASIC
  PRO
  ELITE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
}
